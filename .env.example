# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=bromcom_db
DATABASE_USER=bromcom_user
DATABASE_PASSWORD=bromcom_secure_password
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_URL=postgresql://bromcom_user:bromcom_secure_password@db:5432/bromcom_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CACHE_BACKEND=django_redis.cache.RedisCache

# Email Configuration (SendGrid)
EMAIL_BACKEND=sendgrid_backend.SendgridBackend
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@bromcom.example.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=bromcom-storage
AWS_S3_REGION_NAME=us-east-1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# API Configuration
API_TIMEOUT=30
API_MAX_PAGE_SIZE=100
API_RATE_LIMIT=1000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Application Configuration
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
ATTENDANCE_MARKING_TIME_LIMIT=30
DETENTION_DURATION_OPTIONS=30,60,120,180
BEHAVIOR_POINT_THRESHOLD=50
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT_MINUTES=30

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_PUSH_NOTIFICATIONS=False
ENABLE_BIOMETRIC_ATTENDANCE=False
ENABLE_ANALYTICS_DASHBOARD=True

# Security
ENFORCE_HTTPS=False
SECURE_COOKIES=False
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000
